<resources>
    <style name="Theme.ProyekAkhir" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/dark_gray</item>
        <item name="colorPrimaryVariant">@color/dark_gray</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:statusBarColor">@color/dark_gray</item>
        <item name="android:navigationBarColor">@color/black</item>
    </style>

    <style name="Theme.ProyekAkhir.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.ProyekAkhir.BottomNavigationInactive">
        <item name="android:fontFamily">@font/encodesans_regular</item>
        <item name="background">@null</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="Theme.ProyekAkhir.BottomNavigationActive">
        <item name="android:fontFamily">@font/encodesans_bold</item>
        <item name="background">@null</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="Theme.ProyekAkhir.TabLayout">
        <item name="android:fontFamily">@font/encodesans_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Theme.ProyekAkhir.TransparentStatusBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>
</resources>